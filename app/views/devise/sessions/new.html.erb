<div class="login">
  <div class="mb-1 mt-5">
    <h2><%= t('.sign_in') %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
        <label for="user_email">メールアドレス</label>
        <input autofocus="autofocus" autocomplete="email" class="form-control w-50" type="email" value="gyakutenn@dayo.co" name="user[email]" id="user_email">
      </div>

    <div class="form-group">
        <label for="user_password">パスワード</label>
        <input autocomplete="current-password" class="form-control w-50" type="password" name="user[password]" id="user_password">
      </div>

    <div class="form-group form-check">
          <input name="user[remember_me]" type="hidden" value="0"><input class="form-check-input" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
          <label class="form-check-label" for="user_remember_me">
            次回から自動的にログイン
          </label>      
    </div>

    <div class="form-group">
        <input type="submit" name="commit" value="ログインする" class="btn btn-primary" data-disable-with="ログインする">
      </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
